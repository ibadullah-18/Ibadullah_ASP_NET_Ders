@page
@model productModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">

                    <h2 class="fw-bold mb-3 text-primary">
                        @Model.Product.Name
                    </h2>

                    <p class="text-muted mb-4">
                        @Model.Product.Description
                    </p>

                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Qiymət</span>
                            <span class="badge bg-success fs-6">
                                @Model.Product.Price ₼
                            </span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Miqdar</span>
                            <span>@Model.Product.Count ədəd</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Status</span>
                            @if (Model.Product.IsAviable)
                            {
                                <span class="badge bg-primary">Mövcuddur</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Stokda yoxdur</span>
                            }
                        </li>
                    </ul>

                    <div class="d-flex gap-2">
                        <a href="/products" class="btn btn-outline-secondary w-50">
                            ⬅ Geri
                        </a>

                        @if (Model.Product.IsAviable)
                        {
                            <button class="btn btn-success w-50">
                                🛒 Səbətə əlavə et
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-50" disabled>
                                ❌ Mövcud deyil
                            </button>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
